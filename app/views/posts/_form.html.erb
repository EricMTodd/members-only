<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :content, label: "Create post", input_html: { class: "textarea" }, wrapper: false, label_html: { class:"label" }, placeholder: "Write something..." %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>